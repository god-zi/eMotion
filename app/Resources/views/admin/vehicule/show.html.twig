{% extends 'admin/layout.html.twig' %}

{% block body %}
    <style>
        td{
            height: 70px;
        }
        td img{
            max-height: 100%;
        }
    </style>
<div class="container">
    <h1>Manager - Information de l'offre location</h1>
    <div style="height: 150px;">
        <img src="{{ vehicule.image.webPath }}" alt="{{ vehicule.image.alt }}" height="100%">
    </div>
    <b>Id :</b> {{ vehicule.id }}<br />
    <b>Marque :</b> {{ vehicule.marque }}<br />
    <b>Modèle :</b> {{ vehicule.modele }}<br />
    <b>Numéro de série :</b> {{ vehicule.numSerie }}<br />
    <b>Couleur :</b> {{ vehicule.couleur }}<br />
    <b>Plaque d'immatriculation :</b> {{ vehicule.plaqueImmatriculation }}<br />
    <b>Nombre de kilomètres :</b> {{ vehicule.nbKilometres }}<br />
    <b>Date de d'achat :</b> {{ vehicule.dateAchat|date('d-m-Y') }}<br />
    <b>Prix d'achat :</b> {{ vehicule.prixAchat }}<br />
    <div class="row manager-btn-bottom">
        <div class="col-xs-12">
            <a class="btn-show-list-manager" href="{{ path('admin_vehicule_index') }}" title="Voir toutes les offres">Voir toutes les offres</a>
        </div>
    </div>
</div>
{% endblock %}
